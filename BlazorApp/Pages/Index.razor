<!-- Formulário Principal -->

<form>
    <fieldset class="grupo">
        <div class="campo">
            <label for="name"><strong>Nome Completo </strong></label>
            <input type="text" name="nome" id="nome" size="60" required />
        </div>

        <div class="campo">
            <label for="tratamento"><strong>Tratamento </strong></label>
            <input type="text" name="tratamento" id="tratamento" size="40" required />
        </div>
    </fieldset>

    @*<fieldset>
            <div class="campo">
                <label for="email"><strong>Email: </strong></label>
