@page "/"
@using API.Models;

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Bem-vindo!</h1>
        <p class="lead">Vamos realizar seu Pre-Cadastro.</p>
    </div>
</div>


<SurveyPrompt Title="Dados Básicos" />

<!-- Formulário Principal -->

<form>
    <!--Nome e Tratamento-->
    <div class="row">
        <div class="col">
            <label for="name"><strong>Nome Completo </strong></label>
            <input class="form-control" placeholder="Ex: Josiane Silva" type="text" name="nome" id="nome" size="60" required />
        </div>
        <div class="col">
            <label for="tratamento"><strong>Tratamento </strong></label>
            <input class="form-control" placeholder="Ex: Josi" type="text" name="tratamento" id="tratamento" size="40" required />
        </div>
    </div>
    <br />

    <!--Radio Tipo de Pessoa -->

    <div class="form-group">
        <label><strong>Tipo de Pessoa:</strong></label>
        <br />
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input" id="customControlValidation2" name="radio-stacked" required>
            <label class="custom-control-label" for="customControlValidation2">Física</label>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input" id="customControlValidation3" name="radio-stacked" required>
            <label class="custom-control-label" for="customControlValidation3">Jurídica</label>
            <div class="invalid-feedback">Escolha uma das opções</div>
        </div>
    </div>

    <!-- Criar if para habilitar pelo tipo de pessoa -->
    <!-- Campos -->
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="cpf"><strong>CPF</strong></label>
            <input class="form-control" type="text" name="cpf" id="cpf" required @*@bind="campoCPF" *@ disabled />
        </div>
        <div class="form-group col-md-4">
            <label for="rg"><strong>RG</strong></label>
            <input class="form-control" type="text" name="rg" id="rg" required disabled />
        </div>
        <div class="form-group col-md-4">
            <label for="cnpj"><strong>CNPJ</strong></label>
            <input class="form-control" type="text" name="cnpj" id="cnpj" required disabled />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col">
            <label for="dateNas"><strong>Data de Nascimento / Data de Fundação</strong></label>
            <input class="form-control" type="text" name="dateNas" id="dateNas" />
        </div>
        <div class="form-group col">
            <label for="iEstadual"><strong>Inscrição Estadual</strong></label>
            <input class="form-control" type="text" name="iEstadual" id="iEstadual" disabled />
        </div>
        <div class="form-group col">
            <label for="iMunicipal"><strong>Inscrição Municipal</strong></label>
            <input class="form-control" type="text" name="iMunicipal" id="iMunicipal" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="regime"><strong>Regime Tributário</strong></label>
            <input class="form-control" type="text" name="regime" id="regime" disabled />
        </div>
        <div class="form-group col">
            <label for="contribuinte"><strong>Contribuinte</strong></label>
            <input class="form-control" type="text" name="contribuinte" id="contribuinte" disabled />
        </div>
    </div>


    <SurveyPrompt Title="Logradouro" />

    <div class="form-row">
        <div class="form-group col">
            <label for="endereco"><strong>Endereço</strong></label>
            <input class="form-control" type="text" name="endereco" id="endereco" size="60" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-1">
            <label for="numero"><strong>Nº</strong></label>
            <input class="form-control" type="text" name="numero" id="numero" size="1" />
        </div>
        <div class="form-group col">
            <label for="complemento"><strong>Complemento</strong></label>
            <input class="form-control" type="text" name="complemento" id="complemento" />
        </div>
        <div class="form-group col">
            <label for="bairro"><strong>Bairro</strong></label>
            <input class="form-control" type="text" name="bairro" id="bairro" size="30" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="cep"><strong>CEP</strong></label>
            <input class="form-control" type="text" name="cep" id="cep" size="20" />
        </div>
        <div class="form-group col">
            <label for="cidade"><strong>Cidade</strong></label>
            <input class="form-control" type="text" name="cidade" id="cidade" size="20" />
        </div>
        <div class="form-group col">
            <label for="estado"><strong>Estado</strong></label>
            <input class="form-control" type="text" name="estado" id="estado" size="20" />
        </div>
    </div>

    <SurveyPrompt Title="Principais Contatos" />

    <div class="form-row">
        <div class="form-group col">
            <label for="nomeContato"><strong>Nome</strong></label>
            <input class="form-control" type="text" name="nomeContato" id="nomeContato" size="60" />
        </div>
        <div class="form-group col-md-4">
            <label for="telefone"><strong>Telefone</strong></label>
            <input class="form-control" type="text" name="telefone" id="telefone" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="email"><strong>E-mail</strong></label>
            <div class="input-group">
                <div class="input-group-text">@@</div>
                <input class="form-control" type="email" name="email" id="email" size="55" />
            </div>
        </div>
        <div class="form-group col-md-4">
            <label for="setor"><strong>Setor</strong></label>
            <select class="custom-select" id="inlineFormCustomSelectPref">
                <option selected>Escolha...</option>
                <option value="1">LOGÍSTICA</option>
                <option value="2">ADMINISTRAÇÃO</option>
                <option value="3">ALMOXARIFADO</option>
                <option value="3">OFICINA</option>
                <option value="3">COMERCIAL</option>
            </select>
        </div>
    </div>

    <label><strong>Definir contato como:</strong></label>

    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck1">
        <label class="custom-control-label" for="customCheck1">Signatário</label>
    </div>
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck2">
        <label class="custom-control-label" for="customCheck2">Representante Legal</label>
    </div>
    <br />
    <!-- Botão para enviar formulário -->

    <button class="btn btn-outline-success btn-lg btn-block" align="center" type="submit" onsubmit=""><strong>Enviar</strong></button>

</form>


