
<div class="card">
	<div class="card-body">
		<h3 class="card-title">@Title</h3>
		<p class="card-text">@ChildContent </p>
		<button class="btn btn-outline-success btn-lg btn-block" @onclick="OnYes">@BtnText</button>
	</div>
</div>



@code {
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Title { get; set; }
	public string BtnText { get; set; } = "Yes!";

	private void OnYes()
	{
		if (BtnText == "Yes!")
		{
			BtnText = "OK";
		}
		else
		{
			BtnText = "Yes!";
		}
	}
}