    <!-- Tipo de Pessoa -->

    <div class="check">
        <label><strong>Tipo de Pessoa:</strong></label>
        <br />
        <label>
            <input type="radio" name="tipoPessoa" value="fisica" checked />Física
        </label>
        <label>
            <input type="radio" name="tipoPessoa" value="juridica" />Jurídica
        </label>
    </div>

    <!-- Criar if para habilitar pelo tipo de pessoa -->
    <!-- Pessoa Física-->
    <fieldset class="grupo">
        <div class="campo">
            <label for="cpf"><strong>CPF</strong></label>
            <input type="text" name="cpf" id="cpf" required />
        </div>
        <div class="campo">
            <label for="rg"><strong>RG</strong></label>
            <input type="text" name="rg" id="rg" required />
        </div>
        <div class="campo">
            <label for="cnpj"><strong>CNPJ</strong></label>
            <input type="text" name="cnpj" id="cnpj" required />
        </div>
    </fieldset>

    <!-- Pessoa Jurídica-->
    <fieldset class="grupo">
        <div class="campo">
            <label for="iEstadual"><strong>Inscrição Estadual</strong></label>
            <input type="text" name="iEstadual" id="iEstadual" />
        </div>
        <div class="campo">
            <label for="iMunicipal"><strong>Inscrição Municipal</strong></label>
            <input type="text" name="iMunicipal" id="iMunicipal" />
        </div>
    </fieldset>
    <fieldset class="grupo">
        <div class="campo">
            <label for="regime"><strong>Regime Tributário</strong></label>
            <input type="text" name="regime" id="regime" />
        </div>
        <div class="campo">
            <label for="contribuinte"><strong>Contribuinte</strong></label>
            <input type="text" name="contribuinte" id="contribuinte" />
        </div>
    </fieldset>

    <br />
    <h4>Logradouro</h4>

    <fieldset class="grupo">
        <div class="campo">
            <label for="endereco"><strong>Endereço</strong></label>
            <input type="text" name="endereco" id="endereco" size="40" />
        </div>
        <div class="campo">
            <label for="numero"><strong>Nº</strong></label>
            <input type="text" name="numero" id="numero" size="1" />
        </div>
    </fieldset>
    <fieldset class="grupo">
        <div class="campo">
            <label for="complemento"><strong>Complemento</strong></label>
            <input type="text" name="complemento" id="complemento" />
        </div>
        <div class="campo">
            <label for="bairro"><strong>Bairro</strong></label>
            <input type="text" name="bairro" id="bairro" />
        </div>
        <div class="campo">
            <label for="cep"><strong>CEP</strong></label>
            <input type="text" name="cep" id="cep" size="20" />
        </div>
    </fieldset>

    <fieldset class="grupo">
        
        <div class="campo">
            <label for="cidade"><strong>Cidade</strong></label>
            <input type="text" name="cidade" id="cidade" size="20" />
        </div>
        <div class="campo">
            <label for="estado"><strong>Estado</strong></label>
            <input type="text" name="estado" id="estado" size="20" />
        </div>
    </fieldset>

    <br />
    <h4>Principais Contatos</h4>

    <fieldset class="grupo">
        <div class="campo">
            <label for="nomeContato"><strong>Nome</strong></label>
            <input type="text" name="nomeContato" id="nomeContato" size="60" />
        </div>
        <div class="campo">
            <label for="telefone"><strong>Telefone</strong></label>
            <input type="text" name="telefone" id="telefone" size="15" />
        </div>
    </fieldset>

    <!-- Botão para enviar formulário -->

    <button class="btn btn-primary" type="submit" onsubmit="">Enviar</button>

</form>

